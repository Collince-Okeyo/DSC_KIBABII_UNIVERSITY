<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="authTextInputEditTextPhone" >
        <item name="android:drawableLeft">@drawable/ic_phone_number</item>
        <item name="android:drawableStart">@drawable/ic_phone_number</item>
    </style>

    <style name="authTextInputEditTextPin">
        <item name="android:drawableLeft">@drawable/ic_pin</item>
        <item name="android:drawableStart">@drawable/ic_pin</item>
    </style>


</resources>
